<div class='layout-row'>
  <div class='flex'></div>
  <div class='flex-gt-xs-85 flex-gt-sm-66 flex-gt-md-50'>
    {{register/event-registration-form/registration-information
      hasVolunteers=event.hasVolunteers
      registration=registration
      logoUrl=event.logoUrlThumb
    }}

    <div class="layout-row layout-align-end-center">
      {{#paper-button
        raised=true
        primary=true
        disabled=(not submitFormTask.isIdle)
        onClick=(perform submitFormTask)
      }}
        {{#if submitFormTask.isIdle}}
          Proceed
        {{else}}
          Submitting Info...
        {{/if}}
      {{/paper-button}}
    </div>
  </div>
  <div class='flex'></div>
</div>
