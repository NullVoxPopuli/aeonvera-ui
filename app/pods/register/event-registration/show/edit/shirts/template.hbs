
<div class='layout-row'>
  <div class='flex'></div>
  <div class='flex-gt-xs-85 flex-gt-sm-66 flex-gt-md-50'>
    <h3>Shirts</h3>

    {{register/event-registration-form/shirt-options
      order=order
      shirts=model.event.shirts
      addShirt=(perform addShirt)
      removeShirt=(perform removeShirt)
      updateShirt=(action 'updateShirt')
    }}

    <div class='layout-row layout-align-end-center'>
      {{#paper-button
        onClick=(action 'didFinishSelectingShirts')
        raised=true
        primary=true}}
        Proceed
      {{/paper-button}}
    </div>
  </div>
  <div class='flex'></div>
</div>
