<div class='layout-row'>
  <div class='flex'></div>
  <div class='flex-gt-xs-85 flex-gt-sm-66 flex-gt-md-50'>
    {{register/event-registration-form/housing-options
      selectedHousingOption=(readonly selectedHousingOption)
      housingProvision=housingProvision
      housingRequest=housingRequest
      logoUrl=event.logoUrlThumb
      onChangeSelection=(action (mut selectedHousingOption))
      onSubmitHousing=(action 'didSubmitHousing')
    }}

    <div class='layout-row layout-align-end-center'>
      {{#paper-button
        onClick=(action 'didSubmitHousing')
        raised=true
        primary=true}}
        Proceed
      {{/paper-button}}
    </div>
  </div>
  <div class='flex'></div>
</div>
