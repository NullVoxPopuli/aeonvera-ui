{{#if isModalShowing}}

  {{#paper-dialog
    class='flex-50'
    clickOutsideToClose=true
    escapeToClose=true
    fullscreen=true}}

    {{#paper-dialog-content}}
      <h2 class='md-title'>{{title}}</h2>

      <p>{{yield}}</p>
    {{/paper-dialog-content}}

    {{#paper-dialog-actions class="layout-row"}}
      <span class="flex"></span>
      {{#paper-button
        onClick=(action (mut isModalShowing) false)}}
        Cancel
      {{/paper-button}}

      {{#paper-button
        primary=true
        onClick=(action "didClickConfirm")}}
        Confirm
      {{/paper-button}}
    {{/paper-dialog-actions}}

  {{/paper-dialog}}

{{/if}}
