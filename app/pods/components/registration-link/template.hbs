{{#if name}}
  {{#if registrationId}}
    {{#link-to 'events.show.registrations.show' eventId registrationId}}
      {{name}}

      {{#unless model.isAttending}}
        Not Attending
      {{/unless}}


      {{#if (is-present model.transferredAt)}}
        <br />
        <small>
          transferred
          {{#if (is-present model.transferredFromFristName)}}
            from {{model.transferredFromName}}
          {{/if}}

          {{#if (is-present model.transferredToYear)}}
            to {{model.transferredToYear}}
          {{/if}}
        </small>
      {{/if}}

    {{/link-to}}
  {{else}}
    {{name}}
  {{/if}}
{{else}}
  Name not collected
{{/if}}
