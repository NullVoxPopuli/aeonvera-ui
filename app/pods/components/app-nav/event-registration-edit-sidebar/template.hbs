{{#paper-toolbar class='hide-gt-sm'}}
  {{#paper-toolbar-tools}}
     {{event.name}}
  {{/paper-toolbar-tools}}
{{/paper-toolbar}}

{{#paper-list}}

  {{#paper-item}}
    {{#link-to 'register' event.domain}}All Registrations{{/link-to}}
  {{/paper-item}}

  {{paper-divider}}

  {{#paper-item}}<h5>Current Registration</h5>{{/paper-item}}

  {{#paper-item}}
    {{#link-to 'register.event-registration.show.edit.index' event.domain event.id model.registration.id}}
      Info and Registration
    {{/link-to}}
  {{/paper-item}}

  {{#if hasTickets}}
    {{#paper-item}}
      {{#link-to 'register.event-registration.show.edit.ticket' event.domain event.id model.registration.id
        disabled=model.registration.isNew }}
        Ticket
      {{/link-to}}
    {{/paper-item}}
  {{/if}}

  {{#if hasLineItems}}
    {{#paper-item}}
      {{#link-to 'register.event-registration.show.edit.line-items' event.domain event.id model.registration.id
        disabled=model.registration.isNew }}
        Ã€ la Carte
      {{/link-to}}
    {{/paper-item}}
  {{/if}}


  {{#if hasHousing}}
    {{#paper-item}}
      {{#link-to 'register.event-registration.show.edit.housing' event.domain event.id model.registration.id
        disabled=model.registration.isNew }}
        Housing
      {{/link-to}}
    {{/paper-item}}
  {{/if}}

  {{#if hasShirts}}
    {{#paper-item}}
      {{#link-to 'register.event-registration.show.edit.shirts' event.domain event.id model.registration.id
        disabled=model.registration.isNew}}
        Shirts
      {{/link-to}}
    {{/paper-item}}
  {{/if}}

  {{#if hasCompetitions}}
    {{#paper-item}}
      {{#link-to 'register.event-registration.show.edit.competitions' event.domain event.id model.registration.id
        disabled=model.registration.isNew}}
        Competitions
      {{/link-to}}
    {{/paper-item}}
  {{/if}}

  {{#paper-item}}
    {{#link-to 'register.event-registration.show' event.domain event.id model.registration.id
      disabled=model.registration.isNew}}
      Review
    {{/link-to}}
  {{/paper-item}}

{{/paper-list}}
