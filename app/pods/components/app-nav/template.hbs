{{#paper-toolbar as |nav|}}
  {{#nav.tools}}
    {{#if isSidebarEnabled}}
      {{#paper-button
        iconButton=true
        onClick=(action (mut sideNavigation.open true))}}
        {{paper-icon 'menu'}}
      {{/paper-button}}
    {{/if}}

    <h2>
      {{#if navTitle}}
        {{navTitle}}
      {{else}}
        {{#link-to 'application'}}{{t 'appname'}}{{/link-to}}
      {{/if}}
    </h2>

    <span class='hide-xs'>
      {{yield}}
    </span>

    <div class='flex'></div>

    <div class='layout-row'>

      {{#if session.isAuthenticated}}
        {{#paper-button onClick=(action (transition-to 'dashboard'))}}
          <i class='fas fa-home'></i> Home
        {{/paper-button}}

        {{app-nav/user-menu}}
      {{else}}
        {{#link-to 'upcoming-events'}}<small>Upcoming Events</small>{{/link-to}}

        {{sign-up-modal}}

        {{#paper-button
          data-test-app-nav-login-button
          raised=true
          onClick=(action (transition-to 'login'))}}
          Login
        {{/paper-button}}

      {{/if}}
    </div>

  {{/nav.tools}}
{{/paper-toolbar}}
