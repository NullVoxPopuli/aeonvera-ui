{{#if hasYetToConfirm }}
  {{#paper-button
    class='{{preConfirmClasses}}'
    raised=true
    warn=confirmDestructive
    primary=confirmPrimary
    onClick='preClickAction'}}
    {{yield}}
  {{/paper-button}}
{{else}}

  {{#if showCancel}}
    {{#paper-button
      raised=true
      class='{{cancelClasses}}'
      onClick='cancel'
    }}
      Cancel
    {{/paper-button}}
  {{/if}}


  {{ember-paper/async-button
    onClick=(action 'triggerAction')
    raised=true
    warn=confirmDestructive
    primary=confirmPrimary
    class=confirmClasses
    label=confirmText
  }}

{{/if}}
