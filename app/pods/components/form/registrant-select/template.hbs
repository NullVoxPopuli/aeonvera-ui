{{#paper-autocomplete
  placeholder='Search for a Registrant'
  allowClear=true
  options=registrants
  selected=value
  search=(perform searchRegistrants)
  searchField='attendeeName'
  labelPath='attendeeName'
  loadingMessage='Searching...'
  noMatchesMessage='No registration found.'
  onSelectionChange=onChange as |item term|}}

  {{paper-autocomplete-highlight
    label=(join ' - ' (array item.attendeeName item.attendeeEmail))
    searchText=term.searchText
    flags="i"
  }}

  {{/paper-autocomplete}}
