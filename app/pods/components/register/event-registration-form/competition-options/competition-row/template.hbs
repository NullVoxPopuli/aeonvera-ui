{{#paper-card as |card|}}
  {{#card.title as |title|}}
    {{#title.text as |text|}}
      {{#text.headline}}
        {{competition.name}}
      {{/text.headline}}
    {{/title.text}}
  {{/card.title}}

  {{#card.content}}
    {{competition.description}}

    {{#if competition.requiresPartner}}
      {{paper-input
        type='text'
        label='Partner Name'
        isTouched=true
        value=(readonly partnerName)
        onChange=(action (mut partnerName))
      }}
    {{/if}}

    {{#if competition.requiresOrientation}}
      {{register/event-registration-form/orientation-select
        preciseOrientation=true
        selectedOrientation=selectedOrientation
        didSelectOrientation=(action (mut selectedOrientation))
      }}
    {{/if}}
  {{/card.content}}

  {{#card.actions}}
    {{#if needToUpdate}}
      {{#paper-button onClick=updateCompetition}}
        Update Competition
      {{/paper-button}}
    {{else}}
      {{#if isAdded}}
        {{#paper-button onClick=removeCompetition}}
          Remove Competition
        {{/paper-button}}
      {{else}}
        {{#paper-button onClick=(action 'addNewCompetition')}}
          Add Competition
        {{/paper-button}}
      {{/if}}
    {{/if}}
  {{/card.actions}}

{{/paper-card}}
