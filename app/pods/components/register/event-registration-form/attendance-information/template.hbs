{{#paper-card as |card|}}
  {{register/event-registration-form/card-header
    card=card
    titleText='Basic Information'
    logoUrl=logoUrl
  }}
  {{#card.content}}
    {{paper-input
      type='text'
      label='First Name'
      isTouched=true
      errors=(map-by 'message' errors.attendeeFirstName)
      value=(readonly attendance.attendeeFirstName)
      onChange=(action (mut attendance.attendeeFirstName))
    }}
    {{paper-input
      type='text'
      label='Last Name'
      isTouched=true
      errors=(map-by 'message' errors.attendeeLastName)
      value=(readonly attendance.attendeeLastName)
      onChange=(action (mut attendance.attendeeLastName))
    }}


    <br />
    {{paper-input
      type='text'
      label='City'
      isTouched=true
      errors=(map-by 'message' errors.city)
      value=(readonly attendance.city)
      onChange=(action (mut attendance.city))
    }}

    {{paper-input
      type='text'
      label='State'
      isTouched=true
      errors=(map-by 'message' errors.state)
      value=(readonly attendance.state)
      onChange=(action (mut attendance.state))
    }}

    <br />

    {{register/event-registration-form/orientation-select
      errors=(map-by 'message' errors.danceOrientation)
      selectedOrientation=attendance.danceOrientation
      didSelectOrientation=(action (mut attendance.danceOrientation))
    }}

    <br />

    {{#if hasVolunteers}}
      {{#paper-checkbox
        value=attendance.interestedInVolunteering
        onChange=(action (mut attendance.interestedInVolunteering))}}
        Interested In Volunteering
      {{/paper-checkbox}}

      <br  />
      {{#if attendance.interestedInVolunteering}}
        {{paper-input
          type='text'
          placeholder="Phone Number"
          errors=(map-by 'message' errors.phoneNumber)
          value=attendance.phoneNumber
          onChange=(action (mut attendance.phoneNumber))
          icon='phone'
        }}
      {{/if}}
    {{/if}}
  {{/card.content}}

  {{#card.actions}}
    {{#paper-button onClick=(action onFinishInfo)}}
      Next
    {{/paper-button}}
  {{/card.actions}}

{{/paper-card}}
