

<div class='layout-column layout-align-center-center'>
  {{!-- {{page-header text=title}}
  {{event/logo-thumbnail model=event}} --}}


  {{register/event-registration-form/registration-information
    hasVolunteers=event.hasVolunteers
    registration=registration
    onNameChange=(action (mut registration.attendeeName))
    logoUrl=event.logoUrlThumb
  }}

  {{#if (is-present event.packages)}}
    {{register/event-registration-form/package-select
      packages=event.packages
      selectedPackage=registration.package
      onPackageSelect=(action (mut registration.package))
      errors=registration.errors
    }}
  {{/if}}

  {{#if (is-present event.levels)}}
    {{#if registration.package.requiresTrack}}
      {{register/event-registration-form/level-select
        levels=event.levels
        selectedLevel=registration.level
        onLevelSelect=(action (mut registration.level))
        errors=registration.errors
      }}
    {{/if}}
  {{/if}}
</div>


<div class='margin-left-20'>
  {{#order/order-cart
    host=model
    token=token
    order=order
    onRemoveLineItem=(action removeOrderLineItem)
    afterCancel=(action onCheckout)
    onCheckout=(action cancelOrder)}}



    {{#if event.isHousingEnabled}}
      {{partial 'register/event/housing'}}
    {{/if}}

    {{partial 'register/event/custom-fields'}}

    {{#unless event.competitionSalesHaveEnded}}
      {{partial 'register/event/competitions'}}
    {{/unless}}

    {{#unless event.shirtSalesHaveEnded}}
      {{partial 'register/event/shirts'}}
    {{/unless}}

    {{#if event.hasActiveLineItems}}
      {{partial 'register/event/a-la-carte'}}
    {{/if}}
  {{/order/order-cart}}
</div>
