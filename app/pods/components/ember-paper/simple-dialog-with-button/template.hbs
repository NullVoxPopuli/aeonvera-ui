{{#paper-button
  raised=raised
  primary=primary
  accent=accent
  warn=warn
  class=buttonClasses
  disabled=buttonDisabled
  onClick=(action (mut showModal true))}}
  {{buttonText}}
{{/paper-button}}

{{#if showModal}}
  {{#ember-paper/simple-dialog
    title=title
    onClose=(action (mut showModal false))
    didClickClose=(action 'closeModal')
  }}

    {{yield}}

  {{/ember-paper/simple-dialog}}
{{/if}}
