{{#paper-button
  raised=raised
  primary=primary
  accent=accent
  warn=warn
  class=buttonClasses
  disabled=buttonDisabled
  onClick=(action 'onClick')}}
  {{buttonText}}
{{/paper-button}}

{{#if showModal}}
  {{#ember-paper/simple-dialog
    title=title
    onClose=(action (mut showModal false))
    didClickClose=(action 'closeModal') as |modal|
  }}

    {{yield modal}}

  {{/ember-paper/simple-dialog}}
{{/if}}
