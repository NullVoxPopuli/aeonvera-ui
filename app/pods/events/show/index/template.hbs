
<div class='layout-xs-column layout-xs-column layout-align-xs-start-center layout-gt-xs-row'>
  <div class='flex-25 layout-column'>
    {{charts/leads-follows-pie
      leads=summary.numberOfLeads
      follows=summary.numberOfFollows
      total=summary.totalRegistrants
      height=150
      width=100
    }}

    <hr />

    {{charts/gross-net-revenue
      unpaid=summary.unpaid
      net=summary.revenue
      fees=summary.revenueFees
      total=summary.revenueGross
      height=200
      width=200
    }}
  </div>

  <div class='flex-75'>
    <h2>Most Recent Registrations</h2>
    {{registration-list model=summary.recentRegistrations}}
  </div>
</div>
