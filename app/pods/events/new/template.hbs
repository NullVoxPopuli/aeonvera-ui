<div class='layout-row layout-align-center-center'>
  <div class='layout-row flex-100 flex-gt-sm-80 flex-gt-md-60 flex-wrap'>

    {{form/image-upload-with-preview
      class='flex-20 flex-gt-xs-30 m-2'
      value=model.logo
      onChange=(action (mut-file model.logo))
    }}

    <div class='layout-column flex-grow layout-align flex-80 flex-gt-xs-70 '>
      {{form/content-editable
        class='py-3 px-1 mb-1 mt-0 size-3'
        tagName='h1'
        value=model.name
        placeholder='EventName Year'
        onChange=(action (mut model.name))
      }}

      {{form/content-editable
        class='py-1 px-1 my-0'
        tagName='h3'
        value=model.shortDescription
        placeholder='Tagline, Description'
        onChange=(action (mut model.shortDescription))
      }}
    </div>

  </div>

</div>

