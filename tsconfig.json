{
  "compilerOptions": {
    "target": "es2017",
    "allowJs": true,
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noEmit": true,
    "sourceMap": true,
    "allowNonTsExtensions": true,

    "experimentalDecorators": true,
    "baseUrl": ".",
    "module": "es6",
    "paths": {
      "aeonvera/tests/*": ["tests/*"],
      "aeonvera/*": [
        "app/*"
      ],
      "*": ["types/*", "*/.d.ts"]
    }
  },
  "exclude": [
    "tmp",
    "dist",
    "node_modules",
    "bower_components"
  ]
}
